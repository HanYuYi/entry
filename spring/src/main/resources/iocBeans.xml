<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="getUser" class="com.HanYuYi.dao.UserDaoImpl"></bean>
    <bean id="helloUser" class="com.HanYuYi.ioc.UserServiceImpl">
        <!-- value 和 ref的区别
        value：直接赋值
        ref：对象引用
        -->
        <property name="name" value="张三"></property>
        <property name="userDao" ref="getUser"></property>
    </bean>


    <!--只要注册到这的对象，都会被spring自动new-->
    <!-- <bean id="userAuto" class="com.HanYuYi.ioc.demo02.UserAutoNew"></bean>-->

    <!--构造器注入：给构造器赋值，默认是无参构造-->
    <bean id="conUser" class="com.HanYuYi.ioc.demo02.UserConsImpl">
        <!--根据构造器参数引用赋值-->
        <!--<constructor-arg ref="userAuto"></constructor-arg>-->

        <!--1：根据构造器参数下标赋值-->
        <!--<constructor-arg index="0" value="马芳铃"></constructor-arg>-->
        <!--2：根据构造器参数类型赋值-->
        <!--<constructor-arg type="java.lang.String" value="马芳铃"></constructor-arg>-->
        <!--3：根据构造器参数名称赋值-->
        <constructor-arg name="username" value="马芳铃"></constructor-arg>
    </bean>


    <!--配置：name别名，alias也可以设置别名，import -->
    <!--<bean id="conUser" class="com.HanYuYi.ioc.demo02.UserConsImpl" name="conUser1,conUser2">
        <constructor-arg name="username" value="马芳铃"></constructor-arg>
    </bean>
    <import resource="XXX.xml"></import>-->


    <!--namespace：命名空间
    p：针对set注入
    c：针对构造器注入-->
    <bean id="namesp1" class="com.HanYuYi.ioc.NameSpaceCalss"
          p:age="22" p:name="命名1" />

    <bean id="namesp2" class="com.HanYuYi.ioc.NameSpaceCalss"
          c:age="23" c:name="命名2" />
</beans>